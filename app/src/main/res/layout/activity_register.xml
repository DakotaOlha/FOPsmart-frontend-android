<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/back">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="251dp"
        android:layout_height="198dp"
        android:layout_marginTop="82dp"
        android:contentDescription="@string/logo_desc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/logo_light"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="664dp"
        android:background="@drawable/rounded_top"
        android:elevation="15dp"
        android:orientation="vertical"
        android:padding="33dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" >

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_marginTop="11dp"
            android:fontFamily="@font/manrope"
            android:gravity="center_vertical"
            android:text="@string/prompt_email"
            android:textAlignment="gravity"
            android:textColor="#101010"
            android:textSize="16dp"
            />

        <EditText
            android:id="@+id/etEmail"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:layout_gravity="center"
            android:background="@drawable/field_round_white"
            android:fontFamily="@font/manrope"
            android:hint="@string/hint_email"
            android:inputType="textEmailAddress"
            android:paddingStart="20dp"
            android:textColor="@color/black"
            android:textColorHint="@color/hint"
            android:textSize="15dp"
           />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_marginTop="23dp"
            android:fontFamily="@font/manrope"
            android:gravity="center_vertical"
            android:text="@string/prompt_password"
            android:textAlignment="gravity"
            android:textColor="#101010"
            android:textSize="16dp" />

        <EditText
            android:id="@+id/etPassword"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:layout_gravity="center"
            android:background="@drawable/field_round_white"
            android:fontFamily="@font/manrope"
            android:hint="@string/hint_pass"
            android:inputType="textPassword"
            android:paddingStart="20dp"
            android:textColor="@color/black"
            android:textColorHint="@color/hint"
            android:textSize="15dp"
            app:layout_constraintTop_toBottomOf="@+id/etEmail" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_marginTop="23dp"
            android:fontFamily="@font/manrope"
            android:gravity="center_vertical"
            android:text="Повторіть пароль"
            android:textAlignment="gravity"
            android:textColor="#101010"
            android:textSize="16dp" />

        <EditText
            android:id="@+id/etRepeatPassword"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:layout_gravity="center"
            android:background="@drawable/field_round_white"
            android:fontFamily="@font/manrope"
            android:hint="@string/hint_repeat_pass"
            android:inputType="textPassword"
            android:paddingStart="20dp"
            android:textColor="@color/black"
            android:textColorHint="@color/hint"
            android:textSize="15dp"
            app:layout_constraintTop_toBottomOf="@+id/etPassword" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnRegister"
            style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_gravity="center"
            android:background="@drawable/btn_round_purple"
            android:fontFamily="@font/manrope_bold"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:text="@string/action_sign_up"
            android:textAllCaps="false"
            android:textSize="26dp"
            android:textColor="@color/white"
            android:elevation="4dp"
            app:layout_constraintTop_toBottomOf="@+id/etRepeatPassword" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="40dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/manrope"
                android:gravity="right"
                android:paddingRight="7dp"
                android:text="Вже маєте акаунт?"
                android:textColor="@color/black"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/tvGoToLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/manrope"
                android:gravity="start"
                android:text="Увійти"
                android:textColor="@color/main_purple"
                android:textSize="15dp" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
