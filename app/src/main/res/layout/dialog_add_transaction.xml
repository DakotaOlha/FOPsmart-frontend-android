<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/rounded_dialog_background"
        android:padding="24dp">

        <!-- Header з кнопкою закриття -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="20dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Нова транзакція"
                android:fontFamily="@font/manrope_bold"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/btnClose"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_close"
                android:scaleType="centerInside"
                android:contentDescription="Close"
                android:background="?attr/selectableItemBackgroundBorderless" />
        </LinearLayout>

        <!-- Іконка -->
        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/img_account"
            android:scaleType="centerInside"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp" />

        <!-- Сума -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Сума"
            android:fontFamily="@font/manrope_bold"
            android:textSize="12sp"
            android:textColor="@color/hint"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="4dp" />

        <EditText
            android:id="@+id/etAmount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="0.00"
            android:fontFamily="@font/manrope_bold"
            android:inputType="numberDecimal"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:textColorHint="@color/hint"
            android:padding="16dp"
            android:background="@drawable/bg_edit_text"
            android:layout_marginBottom="16dp" />

        <!-- Тип транзакції -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Тип"
            android:fontFamily="@font/manrope_bold"
            android:textSize="12sp"
            android:textColor="@color/hint"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="4dp" />

        <Spinner
            android:id="@+id/spinnerType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="56dp"
            android:padding="16dp"
            android:background="@drawable/bg_edit_text"
            android:layout_marginBottom="16dp"
            android:popupBackground="@drawable/bg_edit_text"
            />

        <!-- Опис -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Опис"
            android:fontFamily="@font/manrope_bold"
            android:textSize="12sp"
            android:textColor="@color/hint"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="4dp" />

        <EditText
            android:id="@+id/etDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Введіть опис"
            android:fontFamily="@font/manrope_bold"
            android:inputType="text"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:textColorHint="@color/hint"
            android:padding="16dp"
            android:background="@drawable/bg_edit_text"
            android:layout_marginBottom="16dp" />

        <!-- Дата -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Дата транзакції"
            android:fontFamily="@font/manrope_bold"
            android:textSize="12sp"
            android:textColor="@color/hint"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="4dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/bg_edit_text"
            android:padding="4dp"
            android:layout_marginBottom="16dp">

            <EditText
                android:id="@+id/etDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="РРРР-ММ-ДД"
                android:fontFamily="@font/manrope_bold"
                android:inputType="none"
                android:focusable="false"
                android:clickable="true"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:textColorHint="@color/hint"
                android:padding="12dp"
                android:background="@android:color/transparent" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_calendar"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="8dp"
                android:contentDescription="Calendar" />
        </LinearLayout>

        <!-- MCC код (опціонально) -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MCC код (необов'язково)"
            android:fontFamily="@font/manrope_bold"
            android:textSize="12sp"
            android:textColor="@color/hint"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="4dp" />

        <EditText
            android:id="@+id/etMcc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="5411"
            android:fontFamily="@font/manrope_bold"
            android:inputType="number"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:textColorHint="@color/hint"
            android:padding="16dp"
            android:background="@drawable/bg_edit_text"
            android:layout_marginBottom="16dp" />

        <!-- Коментар (опціонально) -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Коментар (необов'язково)"
            android:fontFamily="@font/manrope_bold"
            android:textSize="12sp"
            android:textColor="@color/hint"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="4dp" />

        <EditText
            android:id="@+id/etComment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Додатковий коментар"
            android:fontFamily="@font/manrope_bold"
            android:inputType="textMultiLine"
            android:minLines="2"
            android:gravity="top"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:textColorHint="@color/hint"
            android:padding="16dp"
            android:background="@drawable/bg_edit_text"
            android:layout_marginBottom="24dp" />

        <!-- Кнопка додати -->
        <Button
            android:id="@+id/btnAdd"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Додати транзакцію"
            android:fontFamily="@font/manrope_bold"
            android:textSize="14sp"
            android:textAllCaps="false"
            android:background="@drawable/btn_primary_style"
            android:textColor="@color/white"
            android:layout_marginBottom="8dp" />

        <!-- Кнопка скасувати -->
        <Button
            android:id="@+id/btnCancel"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Скасувати"
            android:fontFamily="@font/manrope_bold"
            android:textSize="14sp"
            android:textAllCaps="false"
            android:background="@drawable/btn_secondary_style"
            android:textColor="@color/black" />

    </LinearLayout>
</ScrollView>