<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".ui.profile.ProfileDialogFragment"
android:background="@color/blue100">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="30dp"
        android:orientation="horizontal"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
        android:id="@+id/backButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_back"
        android:scaleType="centerInside"
        android:contentDescription="Back"
        android:background="?attr/selectableItemBackgroundBorderless" />

        <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Профіль"
        android:gravity="center"
        android:fontFamily="@font/manrope_bold"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:textStyle="bold" />

        <View
        android:layout_width="40dp"
        android:layout_height="40dp" />
    </LinearLayout>

    <!-- Main Content -->
    <ScrollView
    android:layout_width="match_parent"
    android:layout_height="0dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/headerLayout">

        <LinearLayout
        android:id="@+id/mainContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_top"
        android:elevation="15dp"
        android:orientation="vertical"
        android:paddingBottom="30dp">

            <!-- User Info Section -->
            <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp">

                <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/profile_card_background"
                android:padding="16dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                android:id="@+id/profileImage"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/img_account"
                android:scaleType="centerInside"
                android:contentDescription="Profile Image"
                android:background="@drawable/circle_background" />

                <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="16dp"
                android:orientation="vertical">

                <TextView
                android:id="@+id/userName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Хтось Чужий"
                android:fontFamily="@font/manrope_bold"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:textStyle="bold" />

                <TextView
                android:id="@+id/userGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4 група"
                android:fontFamily="@font/manrope_bold"
                android:textSize="12sp"
                android:textColor="@color/hint"
                android:layout_marginTop="4dp" />
                </LinearLayout>

                <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_arrow_right"
                android:scaleType="centerInside"
                android:contentDescription="Navigate" />
                </LinearLayout>
                </FrameLayout>

                <!-- Settings Section -->
                <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Інші налаштування"
                android:fontFamily="@font/manrope_bold"
                android:textSize="12sp"
                android:textColor="@color/hint"
                android:paddingStart="32dp"
                android:paddingEnd="16dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp" />

                <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp">

                <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/profile_card_background"
                android:orientation="vertical">

                <!-- Dark Theme -->
                <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:background="?attr/selectableItemBackground">

                <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_moon"
                android:scaleType="centerInside"
                android:contentDescription="Dark Theme" />

                <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Темна тема"
                android:fontFamily="@font/manrope_bold"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:layout_marginStart="16dp" />

                <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/darkThemeSwitch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
                </LinearLayout>

                <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp" />

                <!-- Notifications -->
                <LinearLayout
                android:id="@+id/notificationsItem"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:background="?attr/selectableItemBackground">

                <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_notification"
                android:scaleType="centerInside"
                android:contentDescription="Notifications" />

                <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Повідомлення"
                android:fontFamily="@font/manrope_bold"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:layout_marginStart="16dp" />

                <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_arrow_right"
                android:scaleType="centerInside"
                android:contentDescription="Navigate" />
                </LinearLayout>

                <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp" />

                <!-- Password -->
                <LinearLayout
                android:id="@+id/passwordItem"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:background="?attr/selectableItemBackground">

                <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_lock"
                android:scaleType="centerInside"
                android:contentDescription="Password" />

                <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Пароль"
                android:fontFamily="@font/manrope_bold"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:layout_marginStart="16dp" />

                <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_arrow_right"
                android:scaleType="centerInside"
                android:contentDescription="Navigate" />
                </LinearLayout>

                <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp" />

                <!-- Language -->
                <LinearLayout
                android:id="@+id/languageItem"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:background="?attr/selectableItemBackground">

                <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_globe"
                android:scaleType="centerInside"
                android:contentDescription="Language" />

                <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Мова"
                android:fontFamily="@font/manrope_bold"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:layout_marginStart="16dp" />

                <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_arrow_right"
                android:scaleType="centerInside"
                android:contentDescription="Navigate" />
                </LinearLayout>
                </LinearLayout>
                </FrameLayout>

                <!-- Support Section -->
                <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Допомога та інформація"
                android:fontFamily="@font/manrope_bold"
                android:textSize="12sp"
                android:textColor="@color/hint"
                android:paddingStart="32dp"
                android:paddingEnd="16dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp" />

                <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp">

                <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/profile_card_background"
                android:orientation="vertical">

                <!-- Help -->
                <LinearLayout
                android:id="@+id/helpItem"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:background="?attr/selectableItemBackground">

                <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_help"
                android:scaleType="centerInside"
                android:contentDescription="Help" />

                <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Допомога"
                android:fontFamily="@font/manrope_bold"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:layout_marginStart="16dp" />

                <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_arrow_right"
                android:scaleType="centerInside"
                android:contentDescription="Navigate" />
                </LinearLayout>

                <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp" />

                <!-- About -->
                <LinearLayout
                android:id="@+id/aboutItem"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:background="?attr/selectableItemBackground">

                <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_info"
                android:scaleType="centerInside"
                android:contentDescription="About" />

                <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Про нас"
                android:fontFamily="@font/manrope_bold"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:layout_marginStart="16dp" />

                <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_arrow_right"
                android:scaleType="centerInside"
                android:contentDescription="Navigate" />
                </LinearLayout>

                <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp" />

                <!-- Logout -->
                <LinearLayout
                android:id="@+id/logoutItem"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:background="?attr/selectableItemBackground">

                <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_logout"
                android:scaleType="centerInside"
                android:contentDescription="Logout" />

                <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Вийти"
                android:fontFamily="@font/manrope_bold"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:layout_marginStart="16dp" />

                <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_arrow_right"
                android:scaleType="centerInside"
                android:contentDescription="Navigate" />
                </LinearLayout>

                <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp" />

                <!-- Delete -->
                <LinearLayout
                android:id="@+id/deliteItem"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:background="?attr/selectableItemBackground">

                <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_delite"
                android:scaleType="centerInside"
                android:contentDescription="Delete" />

                <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Видалити аккаунт"
                android:fontFamily="@font/manrope_bold"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:layout_marginStart="16dp" />

                <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_arrow_right"
                android:scaleType="centerInside"
                android:contentDescription="Navigate" />
                </LinearLayout>
                </LinearLayout>
            </FrameLayout>
        </LinearLayout>
    </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>